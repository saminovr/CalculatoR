<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlack"
    tools:context=".MainActivity">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/procentButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="%"
        android:textSize="42sp"

        app:cornerRadius="0sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nullButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2sp"
        android:layout_toEndOf="@id/procentButton"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="0"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/commonButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2sp"
        android:layout_toEndOf="@id/nullButton"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="."
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/equallyButton"
        android:layout_width="wrap_content"
        android:layout_height="180sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2sp"
        android:layout_toEndOf="@id/commonButton"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="="
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/oneNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:layout_above="@id/procentButton"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="1"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/twoNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:layout_above="@id/procentButton"
        android:layout_toEndOf="@+id/oneNumberButton"
        android:layout_marginLeft="2sp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="2"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/threeNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/procentButton"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:layout_toEndOf="@+id/twoNumberButton"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="3"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fourNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/oneNumberButton"
        android:layout_alignParentLeft="true"

        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="4"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fiveNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/twoNumberButton"
        android:layout_toEndOf="@+id/fourNumberButton"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="5"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sixNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/twoNumberButton"
        android:layout_toEndOf="@+id/fiveNumberButton"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="6"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/plusButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/twoNumberButton"
        android:layout_toEndOf="@+id/sixNumberButton"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="+"
        android:textSize="42sp"
        android:textColor="@color/yellow"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sevenNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/fourNumberButton"
        android:layout_alignParentBottom="false"

        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="7"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/eightNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/fourNumberButton"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/sevenNumberButton"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="8"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/nineNumberButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/fourNumberButton"
        android:layout_marginLeft="2sp"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/eightNumberButton"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="9"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/minusButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/plusButton"
        android:layout_toEndOf="@+id/nineNumberButton"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="–"
        android:textSize="42sp"
        android:textColor="@color/yellow"
        app:cornerRadius="0sp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/sevenNumberButton"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="C"
        android:textColor="@color/yellow"
        android:textSize="42sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/divideButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/sevenNumberButton"
        android:layout_toEndOf="@+id/clearButton"
        android:layout_marginLeft="2sp"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="÷"
        android:textSize="42sp"
        android:textColor="@color/yellow"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiplyButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/sevenNumberButton"
        android:layout_toEndOf="@+id/divideButton"
        android:layout_marginLeft="2sp"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="×"
        android:textSize="42sp"
        android:textColor="@color/yellow"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/sevenNumberButton"
        android:layout_toEndOf="@+id/multiplyButton"
        android:layout_marginLeft="2sp"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="⌫"
        android:textSize="28sp"
        android:textColor="@color/yellow"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/memoryClearButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/clearButton"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="mc"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:cornerRadius="0sp"

        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/memoryPlusButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/divideButton"
        android:layout_toEndOf="@+id/memoryClearButton"
        android:layout_marginLeft="2sp"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-10sp"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="m+"
        android:textSize="28sp"
        android:textColor="@color/white"
        app:cornerRadius="0sp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/memoryMinusButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/divideButton"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:layout_toEndOf="@+id/memoryPlusButton"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="m-"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:cornerRadius="0sp"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/memoryReadButton"
        android:layout_width="wrap_content"
        android:layout_height="95sp"
        android:layout_above="@id/divideButton"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="2sp"
        android:layout_marginBottom="-10sp"
        android:layout_toEndOf="@+id/memoryMinusButton"
        android:backgroundTint="@color/darkGray"
        android:fontFamily="@font/ubuntu_light"
        android:stateListAnimator="@null"
        android:text="mr"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:cornerRadius="0sp"

        />

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="95sp"
        android:layout_above="@+id/memoryClearButton"
        android:layout_marginRight="10sp"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:cursorVisible="true"
        android:textSize="62sp"

        />

</RelativeLayout>